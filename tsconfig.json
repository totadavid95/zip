{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": ["node", "jest"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["./src", "jest.config.ts"],
    "exclude": ["./node_modules", "./dist"]
}
