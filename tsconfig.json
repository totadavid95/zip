{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": ["node", "jest"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "include": ["./src"],
    "exclude": ["./node_modules", "./dist"],
    "ts-node": {
        "swc": true,
        "compilerOptions": {
            "module": "ESNext"
        }
    }
}
