        "filesize": "^10.1.0",
        "i18next": "^23.7.11",
        "i18next-cli-language-detector": "^1.1.8",
        "ignore": "^5.3.0",
        "inquirer": "^9.2.12",
        "normalize-path": "^3.0.0",
        "slugify": "^1.6.6",
        "yaml": "^2.3.4",
        "zod": "^3.22.4"
