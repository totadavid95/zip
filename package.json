        "@types/normalize-path": "^3.0.2",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "esbuild": "^0.19.10",
        "esbuild-register": "^3.5.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsdoc": "^46.9.1",
